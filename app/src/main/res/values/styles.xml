<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/app_style_orange</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MyTextInputLayout" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:textColorHint">@color/gray_inactive</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
        <item name="hintTextAppearance">@style/HintAppearance</item>
    </style>

    <style name="ErrorAppearance">
        <item name="android:textColor">@color/app_style_red</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/gray_inactive</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

</resources>
